.sort{
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
}

.nav{
    width: 100%;
    margin: auto;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
    margin-top: 20rpx;
    margin-bottom: 10rpx;
}

.nav text{
    color: white;
    background-color: gray;
    width: 80rpx;
    height: 70rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 70rpx;
}

.ope{
    background-color: black;
}

.ope{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
    margin-top: 20rpx;
}

.ope text{
    color: white;
    font-size: 20rpx;
}

.input{
    margin-top: 20rpx;
    display: flex;
}

input{
    width: 87%;
    height: 60rpx;
    border: 4rpx solid orange;
    font-size: 24rpx;
}

.input view{
    width: 13%;
    border: 4rpx solid orange;
    line-height: 60rpx;
    text-align: center;
    background-color: lightblue;
    font-size: 28rpx;
}


.button{
    font-size: 24rpx;
    width: 120rpx;
    background-color:gray;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    border-radius: 60rpx;
    color: white;
}

.buttonContainer{
    width: 400rpx;
    margin-top: 20rpx;
    display: flex;
    flex-direction: row; 
    flex-wrap: wrap;
    justify-content: space-around;
    
}

.box{
    display: flex;
    flex-direction: row; 
    flex-wrap: wrap;
    justify-content: center;
}

.tip{
    width: calc(100% - 20rpx);
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    color: red;
    font-size: 26rpx;
}
