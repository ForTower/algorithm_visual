.box{ 
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: flex-start;
    justify-content: space-around;
   }
  
  .box .select{
    margin-top: 20rpx;
    height: 360rpx;
    width: 340rpx;
    background-color: #add8e6;
  }
  
  text{
    display: inline-block;
    margin-left: 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 20rpx;
  }
  
  
  
  image{
    width: 300rpx;
    height: 225rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
  }
  
  
  button{
    height: 360rpx;
    width: 340rpx;
    margin-left:0rpx;
    margin-right:0rpx;
    padding-left:0rpx;
    padding-right:0rpx;
    padding-top: 0rpx;
    padding-bottom: 0rpx;
    box-sizing:border-box;
    font-size:24rpx;
    text-align:left;
    text-decoration:none;
    line-height:30rpx;
    border-radius:0rpx;
    overflow:hidden;
    color:#000000;
    background-color:#F8F8F8;
  }
  
  button::after {
    border: none;
  }
  
  .type{
    height: 40rpx;
    font-size: 28rpx;
    margin-left: 20rpx;
    margin-top: 0rpx;
    font-family: Sans-serif;
    font-weight: bold;
  }
  